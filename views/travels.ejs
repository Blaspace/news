      </ul>
    </div>
    <br />
    <br />
    <!--First Grid-->
    <div class="first-con">
      <div class="first">
        <div>
          <a href="<%= items[0].url %>" target="_blank">
            <img srcset="<%= items[0].img %> " />
            <span>
              <p><b><%= items[0].headline %></b></p>
              <br />
              <p><%= items[0].text %></p>
            </span>
          </a>
        </div>
        <section>
          <div>
            <a href="<%= items[1].url %>" target="_blank">
              <img srcset="<%= items[1].img %> " />
              <span>
                <p><b><%= items[1].headline %></b></p>
                <br />
                <p><%= items[1].text %></p>
                <br />
                <small><%= items[1].date%></small
                ><small> | <%= items[1].location%></small>
              </span>
            </a>
          </div>
          <hr />
          <div>
            <a href="<%= items[2].url %>" target="_blank">
              <img srcset="<%= items[2].img %> " />
              <span>
                <p><b><%= items[2].headline %></b></p>
                <br />
                <p><%= items[2].text %></p>
                <br />
                <small><%= items[1].date%></small
                ><small> | <%= items[1].location%></small>
              </span>
            </a>
          </div>
        </section>
      </div>
    </div>
    <br />
    <br />
    <div class="second-con">
      <div class="second">
        <% items.slice(4, 200).forEach(item=>{ %>
        <div>
          <a href="<%= item.url %>" target="_blank">
            <img srcset="<%= item.img %>" />
            <br />
            <p><b><%= item.headline %></b></p>
            <p><%= item.text %></p>
            <br />
            <small><%= item.date %> | <%= item.location %></small>
          </a>
        </div>
        <%})%>
      </div>
    </div>
    <br>
    <br>
    <br>
